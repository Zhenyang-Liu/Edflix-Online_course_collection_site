<%= erb :"common/manager/manager_header_dashboard" %>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h2 class="page-header">Account Creation Request</h2>
  <div class="row">
    <div class="col-md-8 mb-4">
      <div class="card mb-4">
        <div class="card-body">
          <form>
            <!-- 2 column grid layout with text inputs for the company name and email -->
            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                  <label class="form-label" for="form7Example1">Company Name</label>
                  <input type="text" id="form7Example1" value="<%= @accountRequestDetails.company_name %>" class="form-control" readOnly/>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                  <label class="form-label" for="form7Example2">Company Email</label>
                  <input type="text" id="form7Example2" value="<%= @accountRequestDetails.company_email %>" class="form-control" readOnly/>
                </div>
              </div>
            </div>

            <!-- Requst ID input -->
            <div class="form-outline mb-4" style="margin-bottom: 10px">
              <label for="inputEmail4">Request ID</label>
              <input type="text" name="request_id" class="form-control" placeholder="Username" value="<%=  @accountRequestDetails.request_id %>" readonly=true>
            </div>
  
            <!-- Link input -->
            <div class="form-outline mb-4">
            <label class="form-label" for="form7Example5">Website | Link</label>
              <input type="text" id="form7Example5" value="<%= @accountRequestDetails.link %>" class="form-control" readOnly/>
            </div>
  
            <!-- Supporting Document input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form7Example6">Supporting Document</label>
              <input type="text" id="form7Example6" value="<%= @accountRequestDetails.supporting_document %>" class="form-control" readOnly/>
            </div>
  
            <!-- Message input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form7Example7">Additional information</label>
              <textarea class="form-control" id="form7Example7" rows="4" readOnly><%= @accountRequestDetails.notes %></textarea>
            </div>
          </form>
        </div>
      </div>
    </div>
  
    <div class="col-md-4 mb-4">
      <div class="card mb-4">
        <div class="card-body">
          <div class="card-header py-3">
            <h3 class="mb-10">Verification & Approval</h3>
          </div>
          <ul class="list-group list-group-flush">
            <li
              class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Contact: 
              <span>123456789</span>
            </li>
            <li
              class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
              <div>
                <strong>QuickLink for Sign-Up</strong>
              </div>
              <span>Moderator:</span>
              <div>
                <span>Course Provider: </span>
              </div>
            </li>
          </ul>
          <% if @accountRequestDetails.status == "0" %>
              <button type="button" class="btn btn-success btn-md btn-block">
                Approved
              </button>
          <% elsif @accountRequestDetails.status == "1" %>
              <button type="button" class="btn btn-danger btn-md btn-block">
                Rejected
              </button>
          <% elsif @accountRequestDetails.status == "2" %>
            <div class="mb-8">
              <form method="post" action="/approve-request?id=<%= @accountRequestDetails.request_id %>">
                <button type="submit" class="btn btn-success btn-md btn-block">
                  Approve & Send Account Creation Link
                </button>
              </form>
            </div>
            <div style="margin-top: 10px">
              <form method="post" action="/reject-request?id=<%= @accountRequestDetails.request_id %>">
                <button type="submit" class="btn btn-danger btn-md btn-block">
                  Reject Account Creation
                </button>
              </form>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= erb :"common/manager/manager_footer_dashboard" %>

