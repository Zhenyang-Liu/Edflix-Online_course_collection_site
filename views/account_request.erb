<%= erb :"common/header" %>
<div class="row">
  <div class="col-sm-9" style="background-color: white">
    <div style="margin: 3%">
      <% if flash[:success] %>
        <div class="alert alert-success"><%= flash[:success] %></div>
      <% end %>

      <% if defined?(@account_request_form) %>
        <% if @account_request_form %>
            <% unless @account_request_form.errors.size.zero? %>
            <div class="alert alert-danger">
                <strong>Please correct the errors below:</strong>
            </div>
            <% end %>
        <% end %>
      <% end %>

      <% if flash[:error] %>
        <% flash[:error].each do |message| %>
          <div class="alert alert-danger">
            <%= message %>
          </div>
        <% end %>
      <% end %>
      <div class="section-title col-md-12">
        <h2 style="font-weight:bold">Becoming a 
        <span>
          <% if session[:temp_account_type] == "2"%>
            Moderator?
          <%elsif session[:temp_account_type] == "5"%>
            Course Provider?
          <% end%>
        </span>
        </h2>
        <p>Please fill in this form. We will review your details and will reach you out through email.</p>
      </div>
      <form  method="post" class="contactform contact_form" id="contact_form">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputCompanyName">Company Name<span style="color:red; font-weight:bold"> *</span></label>
            <input type="text" class="form-control" name="company_name" placeholder="Enter name here">
            <% if @account_request_form.errors.include?("company_name") %>
              <% @account_request_form.errors["company_name"].each do |error| %>
                <p class="text-danger"><strong>company name <%= error %></strong></p>
              <% end %>
            <% end %>
          </div>
          <div class="form-group col-md-6">
            <label for="inputCompanyEmail">Company Email<span style="color:red; font-weight:bold"> *</span></label>
            <input type="text" class="form-control" name="company_email" placeholder="support@ibm.com">
            <% if @account_request_form.errors.include?("company_email") %>
              <% @account_request_form.errors["company_email"].each do |error| %>
                <p class="text-danger"><strong>company email <%= error %></strong></p>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="form-group col-md-12">
          <label for="inputAccountType">Accout Type</label>
          <input type="text" class="form-control" name="account_type" value="<% if session[:temp_account_type] == "2"%>Moderator<%elsif session[:temp_account_type] == "5"%>Course Provider<% end%>" readonly=true>
        </div>
        <div class="form-group col-md-12">
          <label for="inputLink">Website | Link</label>
          <input type="text" class="form-control" name="link" placeholder="https://www.123.com">
        </div>
        <div class="form-group col-md-12">
          <label for="inputSupportingDocument">Supporting Documents</label>
          <input type="text" class="form-control" name="supporting_document" placeholder="Later input file .pdf" value="N/A" readonly="true">
        </div>
        <div class="form-group col-md-12">
          <label for="inputNotes">Note</label>
          <textarea class="form-control" name="notes" rows="3"></textarea>
        </div>
        <div class="form-group col-md-12">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <div class="col-sm-3">
    <div style="margin: 3%">
      <ul class="list-group text-primary">
        <li class="list-group-item"><a href="/account-reset-request-email">Reset password by email</a></li>
        <li class="list-group-item"><a href="/account-reset-request">Reset account by contacting us</a></li>
        <li class="list-group-item"><a href="/user_course_referral">Recommend a course</a></li>
        <li class="list-group-item"><a href="/account-request?account_type=5">Becoming a course provider</a></li>
        <li class="list-group-item"><a href="/contact">Other</a></li>
      </ul>
    </div>
  </div>
</div>
<%= erb :"common/footer" %>

