<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <link rel="icon" href="bootstrap-3.3.7/img/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      #success_message{ display: none;}
    </style>
    
    <title>EdFlix - Sign Up</title>
    <!-- Bootstrap core CSS -->
    <link href="bootstrap-3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="bootstrap-3.3.7/assets/css/ie10-viewport-bug-workaround.css" rel="stylesheet">
    <link href="css/pages/authentication.css" rel="stylesheet">
    <script src="bootstrap-3.3.7/assets/js/ie-emulation-modes-warning.js"></script>
  </head>

  <body class = "body">
    <!-- Section: Design Block -->
      <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container" style="padding-top: 5%">
          <div class="row gx-lg-5 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0" style="margin-top: 10%; padding-right: 5%" >
              <h1 class="my-5 display-3 fw-bold ls-tight">
                Getting Started<br />
                <span class="text-primary">Let Your Journey Begins</span>
              </h1>
              <p style="color: hsl(217, 10%, 50.8%); font-style: italic;" class="font-italic">
                "There are no limits to what you can accomplish, except the limits you place on own thinking." - Brian Tracy
              </p>
              <p>
                What are you waiting for, let's jump into it.
              </p>
            </div>

            <div class="col-lg-5 mb-5 mb-lg-0">
              <div class="card">
                <div class="card-body py-5 px-md-5">
                  <h2 style="margin-bottom: 20px">Sign Up</h2>
                  <form id="signup-form" class="needs-validation" novalidate="" method="post" action="/sign-up">
                    <% unless @error.nil? %>
                      <p style="color:red"><%= @error %></p>
                    <% end %>
                    
                    <!-- First Name & Surname input -->
                    <div class="row">
                      <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <input type="text" name="first_name" class="form-control" placeholder="First Name" required="">
                          <div class="invalid-feedback">
                            First name cannot be empty
                          </div>
                        </div>
                      </div>
                      <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <input type="text" name="surname" class="form-control" placeholder="Surname" required="">
                          <div class="invalid-feedback">
                            Surname cannot be empty 
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- Username input -->
                    <div class="form-outline mb-4" style="margin-bottom: 10px">
                      <input type="text" name="username" class="form-control" placeholder="Username" required="">
                      <div class="invalid-feedback">
                        Username cannot be empty
                      </div>
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4" style="margin-bottom: 10px">
                      <input type="email" name="email" class="form-control" placeholder="Email address" required="">
                      <div class="invalid-feedback">
                        Email cannot be empty
                      </div>
                    </div>

                    <div style="margin-bottom: 4%">
                      <input type="text" name="account_type" class="form-control" value="User" placeholder="Account Type" readonly=true>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4" style="margin-bottom: 10px">
                      <input type="password" name="password" class="form-control" value="<%= h @password %>" placeholder="Password" required="">
                      <div class="invalid-feedback">
                        Password cannot be empty
                      </div>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-4" value="Submit" width=20px>
                      Sign Up
                    </button>
                  </form>
                  <!-- Sign In link -->
                  <div class="text-center" style="margin-top: 20px">
                    <p>Already have an account? Sign In <a href="/sign-in">here</a></p>
                  </div>
                  <% if flash[:error] %>
                    <% flash[:error].each do |message| %>
                      <div class="alert alert-danger">
                        <%= message %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="bootstrap-3.3.7/assets/js/ie10-viewport-bug-workaround.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script type="text/javascript">
      (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
          .forEach(function (form) {
            form.addEventListener('submit', function (event) {
              if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
              }

              form.classList.add('was-validated')
            }, false)
          })
      })()
    </script>
  </body>
</html>
