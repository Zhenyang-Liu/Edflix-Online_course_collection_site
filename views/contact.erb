<%= erb :"common/header" %>
<div class="row">
  <div class="col-sm-9" style="background-color: white">
    <div style="margin: 3%">
      <% unless @contact_form.errors.size.zero? %>
        <div class="alert alert-danger">
          <strong>Please correct the errors below:</strong>
        </div>
      <% end %>
      <div class="section-title col-md-12">
        <h2 style="font-weight:bold">Get in Touch?</h2>
        <p>Please leave a message regarding your enquiry or problem</p>
      </div>
      <form method="post" class="contactform contact_form" id="contact_form">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="text" name="email" placeholder="Email" class="form-control" value="<%= h @contact_form.email %>" />
            <% if @contact_form.errors.include?("email") %>
              <% @contact_form.errors["email"].each do |error| %>
                <p class="text-danger"><strong>Email <%= error %></strong></p>
              <% end %>
            <% end %>
          </div>
          <div class="form-group col-md-6">
            <label for="inputUsername">Username</label>
            <input type="text" name="username" placeholder="Username" class="form-control" value="<%= h @contact_form.username %>" />
            <% if @contact_form.errors.include?("username") %>
              <% @contact_form.errors["username"].each do |error| %>
                <p class="text-danger"><strong>Username <%= error %></strong></p>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="form-group col-md-12">
          <label for="exampleFormControlTextarea1">Message</label>
          <textarea type="text" name="message" placeholder="Message" rows="8" class="form-control"><%= h @contact_form.message %></textarea>
          <% if @contact_form.errors.include?("message") %>
            <% @contact_form.errors["message"].each do |error| %>
              <p class="text-danger"><strong>Message <%= error %></strong></p>
            <% end %>
          <% end %>
        </div>
        <div class="form-group col-md-12">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <div class="col-sm-3">
    <div style="margin: 3%">
      <ul class="list-group text-primary">
        <li class="list-group-item"><a href="/account-reset-request-email">Reset password by email</a></li>
        <li class="list-group-item"><a href="/account-reset-request">Reset account by contacting us</a></li>
        <li class="list-group-item"><a href="/user_course_referral">Recommend a course</a></li>
        <li class="list-group-item"><a href="/account-request?account_type=5">Becoming a course provider</a></li>
        <li class="list-group-item"><a href="/contact">Other</a></li>
      </ul>
    </div>
  </div>
</div>
<%= erb :"common/footer" %>

