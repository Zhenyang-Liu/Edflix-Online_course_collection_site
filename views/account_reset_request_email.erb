<%= erb :"common/header" %>
<div class="row">
  <div class="col-sm-9" style="background-color: white">
    <div style="margin: 3%">
      
      <% if flash[:error] %>
        <div class="alert alert-danger">
          <%= flash[:error] %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-warning">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:success] %>
        <div class="alert alert-success">
          <%= flash[:success] %>
        </div>
      <% end %>

      <form method="post" action="/new_password_reset_request_email" class="contactform contact_form">
        <div class="section-title col-md-12">
          <h2 style="font-weight:bold">Resetting Your Password by E-mail Link</h2>
          <p style="font-size:1.5em">Enter your username or email address and our system will send you a link to change your password to the email address on your account.</p>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputUsernameOrEmail">Username / Email</label>
            <input type="text" class="form-control" name="usernameOrEmail" placeholder="Username / Email">
          </div>
        </div>
        <div class="form-group col-md-12">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <div class="col-sm-3">
    <div style="margin: 3%">
      <ul class="list-group text-primary">
        <li class="list-group-item"><a href="/account-reset-request-email">Reset password by email</a></li>
        <li class="list-group-item"><a href="/account-reset-request">Reset account by contacting us</a></li>
        <li class="list-group-item"><a href="/user_course_referral">Recommend a course</a></li>
        <li class="list-group-item"><a href="/account-request?account_type=5">Becoming a course provider</a></li>
        <li class="list-group-item"><a href="/contact">Other</a></li>
      </ul>
    </div>
  </div>
</div>
<%= erb :"common/footer" %>

